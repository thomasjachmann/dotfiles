#!/bin/bash

set -e

cmd=
tab=false
exit_after=false

while [ "$#" -ne "0" ]; do
  case $1 in
    -c|--command)
      cmd=$2
      shift
      ;;
    -t|--tab)
      tab=true
      ;;
    -x|--exit-after)
      exit_after=true
      ;;
    *)
      1>&2 echo "unknown argument: $1"
      exit 1
      ;;
  esac
  shift
done

[ $exit_after = true ] && cmd="exec $cmd"

if [ -S /tmp/kitty.sock ]; then
  window_count=$(/usr/local/bin/kitty @ \
    --to=unix:/tmp/kitty.sock \
    ls | jq ". | length")
  if [ $tab = true ] && [ "$window_count" != "0" ]; then
    /usr/local/bin/kitty @ \
      --to=unix:/tmp/kitty.sock \
      send-key ctrl+b c
  else
    /usr/local/bin/kitty @ \
      --to=unix:/tmp/kitty.sock \
      launch \
      --type=os-window \
      > /dev/null
  fi
  sleep_time=1
else
  open -a kitty
  sleep_time=2
fi

if [ "$cmd" != "" ]; then
  sleep $sleep_time
  # start with a blank to prevent command showing up in history
  /usr/local/bin/kitty @ \
    --to=unix:/tmp/kitty.sock \
    send-text " $cmd\n" \
    > /dev/null
fi
