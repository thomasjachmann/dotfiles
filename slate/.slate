config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

alias mon_internal 1440x900
alias hyper ctrl;shift;alt;cmd

alias center        screenOriginX+screenSizeX*0.5
alias middle        screenOriginY+screenSizeY*0.5
alias halfWidth     screenSizeX*0.5
alias halfHeight    screenSizeY*0.5

alias fullscreen    move screenOriginX;screenOriginY  screenSizeX;screenSizeY     ${mon_internal}
alias lefthalf      move screenOriginX;screenOriginY  ${halfWidth};screenSizeY    ${mon_internal}
alias righthalf     move ${center};screenOriginY      ${halfWidth};screenSizeY    ${mon_internal}
alias topleft       move screenOriginX;screenOriginY  ${halfWidth};${halfHeight}  ${mon_internal}
alias topright      move ${center};screenOriginY      ${halfWidth};${halfHeight}  ${mon_internal}
alias bottomleft    move screenOriginX;${middle}      ${halfWidth};${halfHeight}  ${mon_internal}
alias bottomright   move ${center};${middle}          ${halfWidth};${halfHeight}  ${mon_internal}

bind `:${hyper} chain ${fullscreen} | ${lefthalf} | ${righthalf} | ${topleft} | ${topright} | ${bottomleft} | ${bottomright}

